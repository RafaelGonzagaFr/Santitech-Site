
<body class="d-flex flex-column">
    <main class="flex-shrink-0">

    
    <!-- Tabela de Mensagens -->
    <table class="table">
        <thead>
            <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Número</th>
            <th>Mensagem</th>
            </tr>
        </thead>
        <tbody>

            {{#each mensagens}}
            <tr>
                <td>{{id}}</td>
                <td>{{nome}}</td>
                <td>{{email}}</td>
                <td>{{telefone}}</td>
                <td>
                    <!-- Botão para abrir a janela modal -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal{{id}}">
                        Visualizar
                    </button>
                
        
                    <!-- Janela modal -->
                    <div  class="modal fade" id="modal{{id}}" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modalLabel">Detalhes da Mensagem</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p><strong>ID:</strong>{{id}}</p>
                                    <p><strong>Nome:</strong>{{nome}}</p>
                                    <p><strong>Email:</strong>{{email}}</p>
                                    <p><strong>Número:</strong>{{telefone}}</p>
                                    <p><strong>Mensagem:</strong></p>
                                    <div class="message-content">
                                        <span >{{conteudo}}</span>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
            


            </tbody>
    </table>
    </main>
    <!-- Footer-->
    <footer class="bg-white py-4 mt-auto">
        <div class="container px-5">
            <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                <div class="col-auto">
                    <div class="small m-0">Copyright &copy; SANTITECH</div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

